<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="30dp"
    tools:ignore="MissingDefaultResource">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/pay_name"
                android:layout_width="3dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="0.5"
                android:text="pay_token"
                android:textColor="@color/black"
                android:textSize="16dp">

            </TextView>

            <TextView
                android:id="@+id/pay_token"
                android:layout_width="39dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:paddingStart="10dp"
                android:text="pay_token"
                android:textSize="16dp"
                android:layout_margin="8dp"
                android:textColor="@color/black">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="39dp"
            android:id="@+id/grid">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="10"
                android:columnCount="2">


                <TextView
                    android:id="@+id/admin_name_view"
                    android:layout_width="235dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:text="TextView"
                    android:textColor="@color/black"/>


                <TextView
                    android:id="@+id/admin_Quantity_view"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:text="TextView"
                    android:textColor="@color/black"/>
            </GridLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/grid">

            <Button
                android:id="@+id/view_ready"
                android:layout_width="185dp"
                android:layout_height="42dp"
                android:layout_margin="8dp"
                android:text="READY"
                android:backgroundTint="@color/red_background"/>


            <Button
                android:id="@+id/view_delivered"
                android:layout_width="185dp"
                android:layout_height="42dp"
                android:layout_margin="8dp"
                android:text="DELIVERED"
                android:backgroundTint="@color/red_background"/>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>