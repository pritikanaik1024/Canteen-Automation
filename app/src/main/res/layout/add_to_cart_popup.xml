<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Add Food"
        android:background="@color/red_background"
        android:textSize="25dp"
        android:gravity="center"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="name of item"
        android:layout_marginStart="145dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="75dp"
        android:textSize="20dp"
        android:id="@+id/cart_food"
        android:textColor="@color/black"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="₹"
        android:layout_marginStart="145dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="117dp"
        android:textSize="20dp"
        android:id="@+id/cart_rupee"
        android:textColor="@color/black"
        />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="price of item"
        android:layout_marginStart="165dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="115dp"
        android:textSize="20dp"
        android:id="@+id/cart_price"
        android:textColor="@color/black"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="175dp"
        android:layout_marginStart="155dp"
        android:layout_marginEnd="25dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:src="@drawable/baseline_add_24"
            android:backgroundTint="@color/red_background"
            android:layout_alignParentRight="true"
            android:id="@+id/add_cart"
            android:layout_marginEnd="15dp"/>

        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/sub_cart"
            android:layout_alignRight="@+id/add_cart"
            android:layout_centerInParent="true"
            android:layout_marginLeft="49dp"
            android:layout_marginRight="50dp"
            android:text="1"
            android:textAlignment="center"
            android:textSize="18dp" />


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:src="@drawable/baseline_remove_24"
            android:backgroundTint="@color/red_background"
            android:layout_alignParentLeft="true"
            android:id="@+id/sub_cart"
            android:layout_marginStart="15dp"/>





    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sum:"
        android:layout_marginStart="145dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="230dp"
        android:textSize="20dp"
        android:id="@+id/sum"
        android:textColor="@color/black"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="₹"
        android:layout_marginStart="200dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="230dp"
        android:textSize="20dp"
        android:id="@+id/sum_rupee"
        android:textColor="@color/black"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_marginStart="220dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="230dp"
        android:textSize="20dp"
        android:id="@+id/sum_food"
        android:textColor="@color/black"
        />





    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cart_img"
        android:layout_width="111dp"
        android:layout_height="119dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="90dp"
        android:src="@mipmap/ic_launcher"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp" />




    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="285dp"
        android:text="Add to Cart"
        android:background="@drawable/button_gradient"
        android:textSize="21dp"
        android:textAllCaps="false"
        android:gravity="center"
        android:id="@+id/add_final"/>


</RelativeLayout>